{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StateDiff",
  "type": "object",
  "required": [
    "clocks",
    "facts_add",
    "facts_update",
    "inventory_changes",
    "scene_update",
    "threads_update",
    "relationship_changes"
  ],
  "properties": {
    "clocks": {
      "type": "array",
      "items": {"type": "object"}
    },
    "facts_add": {
      "type": "array",
      "items": {"type": "object"}
    },
    "facts_update": {
      "type": "array",
      "items": {"type": "object"}
    },
    "inventory_changes": {
      "type": "array",
      "items": {"type": "object"}
    },
    "scene_update": {
      "type": "object"
    },
    "threads_update": {
      "type": "array",
      "items": {"type": "object"}
    },
    "relationship_changes": {
      "type": "array",
      "description": "Changes to entity relationships",
      "items": {
        "type": "object",
        "required": ["a_id", "b_id", "delta"],
        "properties": {
          "a_id": {"type": "string"},
          "b_id": {"type": "string"},
          "rel_type": {"type": "string", "default": "trust"},
          "delta": {"type": "integer", "minimum": -2, "maximum": 2},
          "reason": {"type": "string"}
        }
      }
    }
  },
  "additionalProperties": false
}
