{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContextPacket",
  "type": "object",
  "required": [
    "scene",
    "present_entities",
    "entities",
    "facts",
    "threads",
    "clocks",
    "inventory",
    "summary",
    "recent_events"
  ],
  "properties": {
    "scene": {
      "type": "object",
      "required": ["location_id", "time", "constraints"],
      "properties": {
        "location_id": {"type": "string"},
        "time": {"type": "object"},
        "constraints": {"type": "object"}
      },
      "additionalProperties": true
    },
    "present_entities": {
      "type": "array",
      "items": {"type": "string"}
    },
    "entities": {
      "type": "array",
      "items": {"type": "object"}
    },
    "facts": {
      "type": "array",
      "items": {"type": "object"}
    },
    "threads": {
      "type": "array",
      "items": {"type": "object"}
    },
    "clocks": {
      "type": "array",
      "items": {"type": "object"}
    },
    "inventory": {
      "type": "array",
      "items": {"type": "object"}
    },
    "summary": {
      "type": "object",
      "required": ["scene", "threads"],
      "properties": {
        "scene": {"type": "string"},
        "threads": {"type": "string"}
      },
      "additionalProperties": false
    },
    "recent_events": {
      "type": "array",
      "items": {"type": "object"}
    },
    "relationships": {
      "type": "array",
      "description": "Player's relationships with known entities",
      "items": {
        "type": "object",
        "properties": {
          "entity_id": {"type": "string"},
          "entity_name": {"type": "string"},
          "rel_type": {"type": "string"},
          "intensity": {"type": "integer"},
          "notes": {"type": "object"}
        }
      }
    },
    "npc_agendas": {
      "type": "array",
      "description": "Agendas of NPCs present or relevant to the scene",
      "items": {
        "type": "object",
        "properties": {
          "entity_id": {"type": "string"},
          "name": {"type": "string"},
          "agenda": {"type": "string"}
        }
      }
    },
    "investigation_progress": {
      "type": "object",
      "description": "Clue discovery progress per active thread",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "thread_name": {"type": "string"},
          "clues_found": {"type": "integer"},
          "clues_total": {"type": "integer"},
          "last_clue_turn": {"type": ["integer", "null"]}
        }
      }
    },
    "pending_threats": {
      "type": "array",
      "description": "Unresolved soft/hard move threats from prior turns",
      "items": {
        "type": "object",
        "properties": {
          "fact_id": {"type": "string"},
          "description": {"type": "string"},
          "turn_declared": {"type": "integer"},
          "severity": {"type": "string"}
        }
      }
    },
    "npc_capabilities": {
      "type": "array",
      "description": "Capabilities, equipment, and limitations of NPCs present in scene",
      "items": {
        "type": "object",
        "properties": {
          "entity_id": {"type": "string"},
          "name": {"type": "string"},
          "threat_level": {"type": "string", "enum": ["low", "moderate", "high", "extreme"]},
          "capabilities": {"type": "array", "items": {"type": "string"}},
          "equipment": {"type": "array", "items": {"type": "string"}},
          "limitations": {"type": "array", "items": {"type": "string"}},
          "escalation_profile": {"type": "object"}
        }
      }
    },
    "active_situations": {
      "type": "array",
      "description": "Active mechanical situation facts affecting the player",
      "items": {
        "type": "object",
        "properties": {
          "fact_id": {"type": "string"},
          "condition": {"type": "string"},
          "severity": {"type": "string"},
          "narrative_hint": {"type": "string"}
        }
      }
    },
    "failure_streak": {
      "type": "object",
      "description": "Consecutive failure count computed from event log",
      "properties": {
        "count": {"type": "integer"},
        "actions": {"type": "array", "items": {"type": "string"}},
        "during_threat": {"type": "boolean"}
      }
    }
  },
  "additionalProperties": false
}
