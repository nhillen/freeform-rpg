{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClassifyOutput",
  "type": "object",
  "required": ["classifications"],
  "properties": {
    "classifications": {
      "type": "array",
      "description": "Classification results for each segment",
      "items": {
        "type": "object",
        "required": ["id", "content_type", "route", "confidence"],
        "properties": {
          "id": {
            "type": "string",
            "description": "The segment ID"
          },
          "content_type": {
            "type": "string",
            "description": "Content type classification",
            "enum": ["location", "npc", "faction", "culture", "item", "event", "history", "rules", "table", "general"]
          },
          "route": {
            "type": "string",
            "description": "Processing route",
            "enum": ["lore", "systems", "both"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Classification confidence score"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
